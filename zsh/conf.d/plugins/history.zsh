# ----------------------------------------
# `b4b4r07/history` の設定
# ----------------------------------------

# 履歴を呼び出すショートカットキー
export ZSH_HISTORY_KEYBIND_GET="^r"

# 履歴の履歴の同期を行わない
export ZSH_HISTORY_AUTO_SYNC=false

# 絞り込み条件を上書き (値が無いとデフォルトが使われる)
export ZSH_HISTORY_FILTER_OPTIONS=" "
export ZSH_HISTORY_FILTER_OPTIONS_BY_DIR=" "

# `b4b4r07/history` のエイリアス
alias history-b4b4r07="command history"

# Zsh の `history` のエイリアス
alias history-zsh="\history"

# 省略形
alias hist="history-b4b4r07"
